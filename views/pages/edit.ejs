<% include ../partials/header.ejs%>

<div class="container">
    <h1>Edit No. <%= edit.car_no %></h1><br>
    <form action="/editsave" method="post">
        <div class="col">
            <div class="form-group">
                <label for="">No.</label>
                <input type="text" class="form-control" name="noo" id="noo" aria-describedby="helpId"
                    value="<%= edit.car_no %>" readonly>
            </div>
            <div class="form-group">
                <label for="">Name</label>
                <input type="text" class="form-control" name="name" id="name" aria-describedby="helpId"
                    value="<%= edit.car_name %>">

            </div>
            <div class="form-group">
                <label for="">Brand</label>
                <input type="text" class="form-control" name="brand" id="brand" aria-describedby="helpId"
                    value="<%= edit.car_brand %>">
            </div>
            <div class="form-group">
                <label for="">Price</label>
                <input type="text" class="form-control" name="price" id="price" aria-describedby="helpId"
                    value="<%= edit.car_price %>">
            </div>
        </div>
        <button class="btn bg-secondary"><a href="/products" class="text-white">Back</a></button>
        <center><button type="submit" class="btn btn-primary">Edit Product</button></center>
    </form>

    <% include ../partials/footer.ejs%>